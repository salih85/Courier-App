<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Parcel Pickup</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #4e54c8, #8f94fb);
      min-height: 100vh;
    }

    .center-wrapper {
      min-height: calc(100vh - 80px);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card {
      border-radius: 20px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .form-control:focus {
      border-color: #4e54c8;
      box-shadow: 0 0 0 0.2rem rgba(78, 84, 200, 0.25);
    }

    .hero-img {
      width: 100%;
      border-radius: 15px;
      margin-bottom: 20px;
    }
  </style>
</head>

<body>

  <!-- ✅ Navbar at the Top -->
  <%- include('../partials/user-navbar') %>

  <!-- ✅ Centering Wrapper -->
  <div class="center-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card p-4 bg-white">
            <img src="https://images.unsplash.com/photo-1581090467635-1a4b9bbbc1a4?auto=format&fit=crop&w=800&q=80"
              alt="Parcel Delivery" class="hero-img">
            <h3 class="text-center mb-4 text-primary">Parcel Pickup Request</h3>

            <form action="/send-parcel" method="post">

              <div class="mb-3">
                <label for="item" class="form-label">Item</label>
                <input type="text" class="form-control" id="item" name="Item" required>
              </div>

              <div class="mb-3">
                <label for="weight" class="form-label">Weight (KG)</label>
                <input type="number" class="form-control" id="weight" name="Weight" required>
              </div>

              <div class="mb-3">
                <label for="receiverEmail" class="form-label">Receiver Email</label>
                <input type="email" class="form-control" id="receiverEmail" name="email" required>
              </div>

              <div class="mb-3">
                <label for="pickupAddress" class="form-label">Pickup Address</label>
                <textarea class="form-control" id="pickupAddress" rows="3"
                  placeholder="Enter pickup address" name="from" required></textarea>
              </div>

              <div class="mb-3">
                <label for="deliveryAddress" class="form-label">Delivery Address</label>
                <textarea class="form-control" id="deliveryAddress" rows="3"
                  placeholder="Enter delivery address" name="to" required></textarea>
              </div>

              <div class="mb-3">
                <label for="date" class="form-label">Pickup Date</label>
                <input type="date" class="form-control" id="date" name="pdate" required>
              </div>

              <div class="mb-4">
                <label for="time" class="form-label">Pickup Time</label>
                <input type="time" class="form-control" id="time" name="ptime" required>
              </div>

              <button type="submit" class="btn btn-primary w-100">Submit Request</button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
